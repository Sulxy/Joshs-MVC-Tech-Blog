<main class="container mt-5">
    <h1>Home</h1>
        <div class="row">
            {{#each posts}}
                <div class="col-md-4">
                    <div class="card mb-3">
                        <div class="card-header bg-warning">
                            <h2 class="card-title">
                                <a href="/post/{{id}}" class="text-dark">{{title}}</a>
                            </h2>
                        </div>
                            <div class="card-body">
                                <p class="card-text">{{content}}</p>
                                <p class="card-text">Created by: {{user.username}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
</main>